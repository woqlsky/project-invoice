@model IEnumerable<PROJECTINVOICE.Models.Property>

@{
    ViewBag.Title = "Index";
}

<h2>Property</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Ajax.ActionLink("Create new property", "Create", new { id = 1 },
    new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "popup",
        InsertionMode = InsertionMode.Replace,
        OnBegin = "forWindow('block')"
    },
    new { @class = "btn btn-default" })
</p>
<div id="wrap"></div>
<div id="popup">
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.country)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.paddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.country)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idproperty }) |
            @Html.ActionLink("Details", "Details", new { id=item.idproperty }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idproperty })
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    function forWindow(state){
        document.getElementById('wrap').style.display = state;
        document.getElementById('popup').style.display = state;
    }

</script>