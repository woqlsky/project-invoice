@model IEnumerable<PROJECTINVOICE.Models.CostType>

@{
    ViewBag.Title = "Index";
}

<h2>Cost Type</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Ajax.ActionLink("Create new Cost Type", "Create", new { id = 1 },
    new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "popup",
        InsertionMode = InsertionMode.Replace,
        OnBegin = "forWindow('block')"
    },
    new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.typename)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.typename)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idtype }) |
            @Html.ActionLink("Details", "Details", new { id=item.idtype }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idtype })
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    function forWindow(state){
        document.getElementById('wrap').style.display = state;
        document.getElementById('popup').style.display = state;
    }

</script>